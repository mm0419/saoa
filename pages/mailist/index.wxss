/* pages/mailist/index.wxss */
.container{
  background:#f8f9fb;
  padding-top: 50rpx;
  padding-bottom: 200rpx;
}
.container .mai-search{
  width:690rpx;
  height: 70rpx;
  background: #fff;
  margin:0 auto 50rpx;
}
.container .mai-search input{
  width:560rpx;
  height: 70rpx;
  margin-left:30rpx;
  font-size: 28rpx;
  color: #cac8c8;
} 
.container .mai-search image{
  width:100rpx;
  height:70rpx;
}
.mai-dep{
  width: 690rpx;
  padding: 50rpx 30rpx;
  background: #fff;
}
.mai-dep .mai-dep-con{
  width: 100%;
  background: #f0f4fb;
}

.mai-dep .mai-dep-item:last-child .mai-item-1{
  border-bottom: none;
}
.mai-dep .mai-con-wrap text{
  font-size: 28rpx;
  color: #484848;
  margin-left: 30rpx;
}
.mai-dep .mai-con-wrap image{
  width:15rpx;
  height: 25rpx;
  margin-right: 30rpx;
}
.mai-dep .mai-dep-con .mai-item-1{
  height: 66rpx;
  border-bottom: 2rpx dashed #9dacdb;
  padding: 6rpx;
}
.mai-dep .mai-dep-item .mai-con-wrap{
  height: 62rpx;
  border: 2rpx dashed #f0f4fb;
  border-radius: 8rpx;
}
.mai-dep .mai-dep-item.show .mai-item-1{
  border: 2rpx dashed #4b4f74;
  background: #c5d7f6;
}
.mai-dep .mai-dep-item.show .mai-con-wrap{
  border: 2rpx dashed #4b4f74;
}
.mai-dep .mai-dep-item.show .mai-con-wrap image{
  transform: rotate(90deg);
}
.mai-dep .mai-dep-item .mai-item-con{
  background-color: #fff;
}
.mai-dep .mai-item-con .mai-con-1{
  height: 76rpx;
  border-bottom: 4rpx solid #c3cff3;
  font-size: 24rpx;
  color: #888;
}
.mai-dep .mai-con-1 radio-group{
  width:120rpx
}
.mai-dep .mai-con-1 radio-group:nth-of-type(1){
  margin-left: 36rpx;
  margin-right: 200rpx;
}
