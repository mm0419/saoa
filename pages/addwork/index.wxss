/* pages/office/index.wxss */
.top{
  position: fixed;
  left: 0;
  top: 0;
  background-color: #f8f9fb;
  width: 100%;
  padding:50rpx 0;
  z-index: 9;
}
.app-nav{
  width:690rpx;
  margin: 0 auto;
}
.nav-fun{
  width: 690rpx;
  margin: 20rpx auto 0;
}
.nav-fun .nav-sea{
  width: 330rpx;
  height: 66rpx;
  background-color: #fff;
  border: 2rpx solid #c3d7fa;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.nav-fun .nav-sea input{
  width: 230rpx;
  height: 100%;
  border: none;
  outline:none;
  margin-left: 30rpx;
  font-size: 22rpx;
  color: #bbb;
}
.nav-fun .nav-sea .pla-sty{
  font-size: 22rpx;
  color:#bbb;
}
.nav-fun .nav-sea image{
  width: 62rpx;
  height: 100%;
}
.lea-wrap{
  background: #edf0f5;
  width:690rpx;
  padding: 290rpx 30rpx 50rpx;
}
.lea-wrap .lea-item{
  width:690rpx;
  height: 350rpx;
  margin-top: 50rpx;
  border-radius: 20rpx;
  background-color: #fff;
  overflow: hidden;
}
.lea-wrap .lea-item .lea-info-wrap{
  width:890rpx;
  height: 100%;
  transition: all .5s;
}
.lea-wrap .lea-item .move-left{
  margin-left:-200rpx;
}
.lea-wrap .lea-item .lea-info{
  position: relative;
  padding: 30rpx;
  width:650rpx;
  height: 290rpx;
  background-color: #fff;
}
.lea-wrap .lea-item .icon{
  position: absolute;
  left: 10rpx;
  top: 50%;
  width: 10rpx;
  height: 18rpx;
  margin-top: -9rpx;
}
.lea-wrap .lea-item .lea-tit{
  height: 90rpx;
  align-items:baseline;
  border-bottom:2rpx solid #d7dffb;
}
.lea-wrap .lea-item .lea-name{
  font-size: 40rpx;
  font-weight: bold;
  height: 100%;
  line-height: 90rpx;
  color: #4a4a4a;
  margin-right: 20rpx;
}
.lea-wrap .lea-item .lea-class{
  margin-right: 10rpx;
}
.lea-wrap .lea-item .lea-class image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
}
.lea-wrap .lea-item .lea-class text{
  font-size:30rpx;
  color: #5fbf39;
}
.lea-wrap .lea-item .lea-bill{
  font-size: 26rpx;
  color: #b3b3b3; 
  line-height: 90rpx;
}
.lea-wrap .lea-item .lea-des{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 24rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
}
.lea-wrap .lea-item .lea-time{
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: right;
  color: #b3b3b3;
}
.lea-wrap .lea-item .state{
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 120rpx;
  height: 120rpx;
}
.lea-wrap .lea-item .lea-info-ope{
  width:180rpx;
  height: 100%;
  background: #e85c5c;
  line-height: 350rpx;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
}








